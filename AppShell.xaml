<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cinemate.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cinemate.Views"
    Shell.BackgroundColor="#9399C3"
    Shell.TitleColor="White"
    Title="Cinemate">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:IntroPage}"
        Route="IntroPage" />

    <ShellContent
        Title="About Cinemate"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage" />

    <ShellContent
        Title="Discover movies"
        ContentTemplate="{DataTemplate local:DiscoverMoviesPage}"
        Route="DiscoverMoviesPage" />

    <ShellContent
        Title="Movie suggestions"
        ContentTemplate="{DataTemplate local:MovieSuggestionsPage}"
        Route="MovieSuggestionsPage" />

</Shell>
